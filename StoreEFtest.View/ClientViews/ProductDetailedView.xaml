<UserControl x:Class="StoreEFtest.View.ClientViews.ProductDetailedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StoreEFtest.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Grid.Row="1" Grid.Column="0">Product Name</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name}"></TextBox>
            <Label Grid.Row="2" Grid.Column="0">Brand</Label>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Brand.Name}"></TextBox>
            <Label Grid.Row="3" Grid.Column="0">Category</Label>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Category.Name}"></TextBox>
            <Label Grid.Row="4" Grid.Column="0">Model Year</Label>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding ModelYear}"></TextBox>
            <Label Grid.Row="5" Grid.Column="0">Product Price</Label>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ProductPrice}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
